from selenium import webdriver
cd='C:\\webdrivers\\chromedriver.exe'

browser=webdriver.Chrome(cd)


print("Checking on Amazon...........")
browser.get('https://www.amazon.in/HP-Processor-15-6-inch-i5-10300H-15-ek0017TX/dp/B08CGMGQ3P/ref=sr_1_7?dchild=1&keywords=hp+omen&qid=1597230086&s=computers&sr=1-7')
pe=browser.find_element_by_id('priceblock_ourprice')
pr=pe.get_attribute('textContent')
pr=pr[2:]
pl=pr.split(',')

price_a=''
for i in pl:
	price_a+=i

price_a=float(price_a)

print("The price in Amazon is " + str(price_a))


print("Checking on Flipkart...........")
browser.get('https://www.flipkart.com/hp-omen-core-i5-7th-gen-8-gb-1-tb-hdd-128-gb-ssd-windows-10-home-6-graphics-nvidia-geforce-gtx-1060-15-ce073tx-gaming-laptop/p/itmf3s3fcqfg5tqv?pid=COMEX3U79BHAFW8Q&lid=LSTCOMEX3U79BHAFW8QLC1ZNR&marketplace=FLIPKART&srno=s_1_2&otracker=AS_Query_HistoryAutoSuggest_2_0&otracker1=AS_Query_HistoryAutoSuggest_2_0&fm=SEARCH&iid=f758a604-4533-478b-a6d6-5ec22b1cd762.COMEX3U79BHAFW8Q.SEARCH&ppt=sp&ppn=sp&ssid=2yygr8w3v40000001597230230766&qH=b9f91c04a3eae225')
pe=browser.find_element_by_xpath('//div[@class="_1vC4OE _3qQ9m1"]')
pr=pe.get_attribute('textContent')


pr=pr[1:]
pl=pr.split(',')

price_f=''
for i in pl:
	price_f+=i

price_f=float(price_f)

print("The price in Flipkart is " + str(price_f))

if (price_a<price_f):
	print("The price is less on Amazon. But from there.")

elif (price_f<price_a):
	print("The price is less on Flipkart. But from there.")

else:
	print(" The price is same on Amazon and Flipkart. You can buy from any of them.")
